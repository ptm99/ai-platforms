# -----------------------
# Domain & Subdomains
# -----------------------
PUBLIC_DOMAIN=example.com
BACKEND_SUBDOMAIN=api
FRONTEND_SUBDOMAIN=ai

# -----------------------
# PostgreSQL
# -----------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgrespw123
POSTGRES_DB=ai_platform
POSTGRES_PORT=5432

# -----------------------
# pgAdmin
# -----------------------
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# -----------------------
# Traefik
# -----------------------
TRAEFIK_ACME_EMAIL=admin@example.com

# -----------------------
# Security
# -----------------------
# MUST be exactly 32+ chars recommended; do not add comments on same line
API_KEY_ENCRYPTION_SECRET=12345678901234567890123456789012
JWT_SECRET=myjwtsecret123

# Optional (backend supports these; compose passes them through)
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# -----------------------
# Backend Internal App
# -----------------------
BACKEND_PORT=8080
CORS_ORIGIN=*

# Feature flags
ENABLE_MODEL_DISCOVERY=true
MODEL_DISCOVERY_CRON=0 * * * *
ENABLE_STARTUP_AUTOFIX=true
